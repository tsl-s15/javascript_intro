<p id="notice"><%= notice %></p>

<h1>Listing Ideas</h1>

<%= render 'form' %>


<table>
  <thead>
    <tr>
      <th>Desc</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ideas.each do |idea| %>
      <%= render 'idea_row', idea: idea %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Idea', new_idea_path %>
